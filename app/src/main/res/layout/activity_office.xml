<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".view.activities.officeactivity.OfficeActivity">

    <EditText
        android:id="@+id/officeNameEditTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textAlignment="center"
        android:hint="Name"/>

    <EditText
        android:id="@+id/officeLocationEditTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textAlignment="center"
        android:hint="Location"/>

    <EditText
        android:id="@+id/officeTypeEditTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textAlignment="center"
        android:hint="Type"/>

    <EditText
        android:id="@+id/officeEmployeesEditTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textAlignment="center"
        android:hint="Employees"/>


    <Button
        android:id="@+id/showOfficeButtonId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Employees"
        android:onClick="onClick"/>


</LinearLayout>